#!/usr/local/bin/ruby26

H = ENV['HOME']
OUT = "#{H}/Downloads/out.pdf"
BAK = "#{H}/Downloads/out.bak.pdf"
LAST = "#{H}/.last_out_pdf"

m0 = File.read(LAST).strip.to_f rescue 0.0
m = File.mtime(OUT).to_f

exit 0 if m <= m0

File.open(LAST, 'wb') { |f| f.write(m.to_s + "\n") }
system("/usr/bin/lpr #{OUT}")
system("mv #{OUT} #{BAK}")

